---
const MAX_STAR_COUNT = 25 as const;
const MIN_STAR_COUNT = 10 as const;
const starCount = Math.max(Math.round(Math.random() * MAX_STAR_COUNT), MIN_STAR_COUNT);
---
<div class="fixed h-dvh w-dvw overflow-hidden flex items-center justify-center">
  <div class="relative rotate-45 motion-safe:animate-sky-infinite">
    {
      Array.from({ length: starCount }).map(() => <div class="star"/>)
    }
  </div>
</div>
<style lang="scss">
$shooting-time: 3000ms;

.star {
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 9999;
  height: 2px;
  background: linear-gradient(-45deg, rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
  border-radius: 999px;
  filter: drop-shadow(0 0 6px rgba(105, 155, 255, 1));

  &::before {
    content: '';
    position: absolute;
    top: calc(50% - 1px);
    right: 0;
    height: 2px;
    background: linear-gradient(-45deg, rgba(0, 0, 255, 0), rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
    transform: translateX(50%) rotateZ(45deg);
    border-radius: 100%;
  }

  &::after {
    content: '';
    position: absolute;
    top: calc(50% - 1px);
    right: 0;
    height: 2px;
    background: linear-gradient(-45deg, rgba(0, 0, 255, 0), rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
    border-radius: 100%;
    transform: translateX(50%) rotateZ(-45deg);
  }

  @for $i from 1 through 25 {
    &:nth-child(#{$i}) {
      $delay: random(9999) + 0ms;
      top: calc(50% - #{random(400) - 200px});
      left: calc(50% - #{random(300) + 0px});
      animation-delay: $delay;

      &::before,
      &::after {
        animation-delay: $delay;
      }
    }
  }
}

@media (prefers-reduced-motion: no-preference) {
  .star {
    animation:
      tail $shooting-time ease-in-out infinite,
      shooting $shooting-time ease-in-out infinite;

    &::before {
      animation: shining $shooting-time ease-in-out infinite;
    }

    &::after {
      animation: shining $shooting-time ease-in-out infinite;
    }
  }
}

@keyframes tail {
  0% {
    width: 0;
  }

  30% {
    width: 100px;
  }

  100% {
    width: 0;
  }
}

@keyframes shining {
  0% {
    width: 0;
  }

  50% {
    width: 30px;
  }

  100% {
    width: 0;
  }
}

@keyframes shooting {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(300px);
  }
}
</style>
